      "type": "object",
      "title": "RSK Initiator Details",
      "form": true,
      "properties": {
        "API_EMAIL": {
          "type": "string",
          "title": "Chainlink API email",
          "form": true
        },
        "API_PASSWORD": {
          "type": "string",
          "title": "Chainlink API password",
          "form": true
        },
        "CHAINLINK_BASE_URL": {
          "type": "string",
          "title": "Chainlink node url",
          "form": true
